<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tailor</title>

  <!-- Icon -->
  <%= favicon_link_tag 'icon.png' %>
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&family=Rock+Salt&display=swap" rel="stylesheet" />
  <!-- Semantic UI -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.css" />
  <!-- CSS Stylesheets -->
  <%= stylesheet_link_tag 'contents' %> <!-- Use Rails asset pipeline to include CSS -->
</head>
<body>
<h1 class="title">Input your information below:</h1>
<div class="tabs">
  <div class="tabs__sidebar">
    <button class="tabs__button top-btn" data-for-tab="1">
      Personal Info
    </button>
    <button class="tabs__button" data-for-tab="2">Work Experiences</button>
    <button class="tabs__button" data-for-tab="3">Education</button>
    <button class="tabs__button" data-for-tab="4">Skills</button>
    <button class="tabs__button bottom-btn" data-for-tab="5">Other</button>

    <div class="last-section">
      <div class="ui blue submit button" style="font-family: 'Rock Salt', cursive; width: 100%" id="submit-button">
        <a href="#" style="color: white">Submit</a>
      </div>
    </div>
  </div>

  <div class="tabs__content" data-tab="1">
    <h2 class="sub-header">Personal Info</h2>
    <div class="ui form">
      <%= form_with(model: PersonalInfo.new, url: personal_infos_path) do |form| %>
        <div class="field">
          <label for="first_name">First Name</label>
          <%= form.text_field :first_name, id: "first_name", name: "personal_information[first_name]" %>
        </div>
        <div class="field">
          <label for="last_name">Last Name</label>
          <%= form.text_field :last_name, id: "last_name", name: "personal_information[last_name]" %>
        </div>
        <div class="field">
          <label for="city">City</label>
          <%= form.text_field :city, id: "city", name: "personal_information[city]" %>
        </div>
        <div class="field">
          <label for="state">State</label>
          <%= form.text_field :state, id: "state", name: "personal_information[state]" %>
        </div>
        <div class="field">
          <label for="phone">Phone</label>
          <%= form.text_field :phone, id: "phone", name: "personal_information[phone]" %>
        </div>
        <div class="actions">
          <%= form.submit 'Save Personal Information' %>
        </div>
      <% end %>
      </div>
  </div>

  <div class="tabs__content" data-tab="2">
    <h2 class="sub-header">Work Experiences</h2>
    <div class="ui form">
      <!-- Add a form for adding work experiences -->
      <form id="work-experience-form">
        <div class="field">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" placeholder="Input title...">
        </div>
        <div class="field" id="description-fields">
          <label for="description">Description</label>
          <input type="text" name="descriptions[]" placeholder="Input description...">
        </div>
        <div class="actions">
          <button type="button" id="add-description">Add Description</button>
        </div>
      </form>
    </div>
  </div>

  <div class="tabs__content" data-tab="3">
    <h2 class="sub-header">Education</h2>
    <div class="ui form">
      <div class="field">
        <textarea></textarea>
      </div>
    </div>
  </div>
  <div class="tabs__content" data-tab="4">
    <h2 class="sub-header">Skills</h2>
    <div class="ui form">
      <div class="field">
        <textarea></textarea>
      </div>
    </div>
  </div>
  <div class="tabs__content" data-tab="5">
    <h2 class="sub-header">Other</h2>
    <div class="ui form">
      <div class="field">
        <textarea></textarea>
      </div>
    </div>
  </div>
</div>

<script>
    function setupTabs() {
        document.querySelectorAll(".tabs__button").forEach((button) => {
            button.addEventListener("click", () => {
                const sideBar = button.parentElement;
                const tabsContainer = sideBar.parentElement;
                const tabNumber = button.dataset.forTab;
                const tabToActivate = tabsContainer.querySelector(
                    `.tabs__content[data-tab="${tabNumber}"]`
                );

                sideBar.querySelectorAll(".tabs__button").forEach((button) => {
                    button.classList.remove("tabs__button--active");
                });

                tabsContainer.querySelectorAll(".tabs__content").forEach((tab) => {
                    tab.classList.remove("tabs__content--active");
                });

                button.classList.add("tabs__button--active");
                tabToActivate.classList.add("tabs__content--active");
            });
        });

        document.getElementById("add-description").addEventListener("click", () => {
            const descriptionFields = document.getElementById("description-fields");
            const newInput = document.createElement("input");
            newInput.type = "text";
            newInput.name = "descriptions[]";
            newInput.placeholder = "Input description...";
            descriptionFields.appendChild(newInput);
        });
    }

    document.addEventListener("DOMContentLoaded", () => {
        setupTabs();

        document.querySelectorAll(".tabs").forEach((tabsContainer) => {
            tabsContainer.querySelector(".tabs__sidebar .tabs__button").click();
        });
    });
</script>

<!-- Semantic UI Script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.js"></script>
</body>
</html>